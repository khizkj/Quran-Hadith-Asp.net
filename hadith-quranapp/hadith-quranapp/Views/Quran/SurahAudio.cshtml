﻿@model WebApplication5.Models.SurahDetails

@{
    ViewData["Title"] = "SurahAudio";
}

<h2>@Model.EnglishName - @Model.EnglishNameTranslation</h2>

@foreach (var ayah in Model.Ayahs)
{
    <p>@ayah.Text</p>
    <audio controls>
        <source src="@ayah.Audio" type="audio/mp3">
        Your browser does not support the audio tag.
    </audio>
    <hr />
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    
   
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc; 
        color: black;
        text-align: center; 
    }

    
    .surah-container {
        max-width: 700px;
        margin: 30px auto;
        padding: 20px;
        background: #ffffff; 
        border-radius: 10px;
        box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: white;
        font-weight: bold;
        font-size: 26px;
        background: linear-gradient(to right, #2c3e50, #3498db); 
        padding: 15px;
        border-radius: 5px;
    }

    .ayah-box {
        background: white;
        padding: 20px;
        border-left: 4px solid #2980b9; 
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

   
    .ayah-text {
        font-size: 22px;
        font-weight: bold;
        direction: rtl; 
        text-align: center; 
        padding: 10px;
        color: black;
        width: 100%;
    }

    
    .audio-player {
        display: block;
        margin: 15px auto;
        width: 80%;
        max-width: 500px;
        border-radius: 5px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
    }

   
    .divider {
        border: none;
        height: 2px;
        background: linear-gradient(to right, #5dade2, #3498db);
        margin: 20px auto;
        width: 80%;
    }

</style>